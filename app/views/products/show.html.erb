<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
  </article>
<br />
<br />
<br />

<h2>Reviews</h2>
<br />
<div class="container">
<div class="row">
  <div>
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
    Write a review
    </button>
  </div>
</div>


<br />

  <div class="row" id="reviews-container">
      <% @reviews.each do |review| %>
        <div>
        <%= render 'review', review: review %>

      <% end %>
  </div>

<%= form_for :review, method: :post, url: "#{@product.id}/reviews#create" do |form| %>
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">

        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Write a review</h4>
        </div>

  <div class="modal-body">
    <div class="field">
      <%= form.label :rating %>
      <%= form.select :rating, options_for_select([1, 2, 3, 4, 5]), class: 'form-control' %>
    </div>
    <div>
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal" id="mynewreviewclose">Close</button>
      <%= form.submit 'Add Review', class: 'btn btn-primary' %>
  </div>
</div>
  <div class="form-group">
  </div>
  <div class="form-group">
  </div>
  </div>

  <% end %>
</div>
