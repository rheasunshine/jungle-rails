<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
  </article>
<br />
<br />
<br />

<div>

      <% @reviews.each do |review| %>
        <p>Rating: <%=review.rating%></p>
        <p>Description: <%=review.description%></p>
      <% end %>
  </div>

  <h1>Write a review</h1>
    <%= form_for :review, method: :post, url: "#{@product.id}/reviews#create" do |form| %>
    Rating: <%= form.select :rating, options_for_select([1, 2, 3, 4, 5]), class: 'form-control' %>
    Description: <%= form.text_area :description, class: 'form-control' %>
    <%= form.submit 'Add Review', class: 'btn btn-primary' %>
  <% end %>
