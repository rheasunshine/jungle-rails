<div class="col-md-4 blog-main box text-center" id="review_<%= review.id %>">

<div class="panel panel-info">
  <div class="panel-heading">
    <div class="panel-title">
      <h3>Rating:<%= review.rating %> </h3>
      <p>Description: <%=review.description%></p>
    </div>
    <div class="panel-body">
        <div style="color:#3882D6;">
          <%= time_ago_in_words(review.created_at) %>
        </div><br />
        <div class="btn-group" role="group" aria-label="...">
          <button type="button" class="btn btn-warning" data-toggle="modal" data-target="my_update_review_<%= review.id %>">
            Delete
          </button>
          <%= link_to 'Destroy', review, method: :delete, class: "btn btn-danger" %>

        </div>
    </div>
  </div>
</div>


<%= form_for review, method: :post do |form| %>
<div class="modal fade" id="my_update_review_<%= review.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden:"true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Edit</h4>
      </div>
      <div class="modal-body">

        <div class="field">
          <%= form.label :rating %>
          <%= form.select :rating, options_for_select([1, 2, 3, 4, 5]), class: 'form-control' %>
        </div>
        <div class="field">
          <%= form.label :description %>
          <%= form.text_area :description, class: 'form-control' %>
        </div>


      </div>
      <div class="modal-footer">
        <button type="button" id="my_update_review_<%= review.id %>" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= form.submit 'Add Review', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
<%end%>
</div>
