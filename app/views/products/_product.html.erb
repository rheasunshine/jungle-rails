<article class="product">
  <header>
    <%= link_to product do %>
      <%= image_tag product.image.thumb, alt: product.name %>
      <h4><%= product.name %></h4>
    <% end %>
  </header>
  <p class="description">
    <%= product.description %>
  </p>
  <p>
    <h3 style="color:#f0ad4e">
      <%= render 'stars', rating: average_rating_helper(product) %>
    </h3>
    <h5 style="color:#000000">
      Average rating: <% if average_rating_helper(product) == 0 %>No reviews yet!<% else %><%= average_rating_helper(product) %> stars<% end %>
    </h5>
  </p>

  <footer class="actions">
    <%= link_to add_item_cart_path(product_id: product.id), class: 'btn btn-primary', method: :put do %>
      <%= fa_icon "shopping-cart", text: 'Add' %>
    <% end %>
    <%= link_to product, class: 'btn btn-default pull-right' do %>
      Details &raquo;
    <% end %>
  </footer>

  <aside class="price">
    <%= humanized_money_with_symbol product.price %>
  </aside>

  <% if product.quantity < 1 %>
    <aside class="sold_out">
      SOLD OUT!
    </aside>
  <% end %>



</article>
